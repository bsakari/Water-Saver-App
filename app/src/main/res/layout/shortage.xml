<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#1f2441"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/shortageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Report Shortage"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_marginBottom="35px"
        android:textSize="50sp" />






    <TextView
        android:id="@+id/question1_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When Last Did You Receive Water?"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <EditText
        android:padding="10dp"
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#f9cece"
        android:ems="10"
        android:background="#a7a7a7"
        android:layout_marginBottom="45px"
        android:inputType="date" />






    <TextView
        android:id="@+id/question2_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meter Number"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <EditText
        android:padding="10dp"
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#a7a7a7"
        android:inputType="number"
        android:textColorHint="#f9cece"
        android:layout_marginBottom="45px"
        android:textSize="20sp" />







    <TextView
        android:id="@+id/question3_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <EditText
        android:padding="10dp"
        android:id="@+id/edit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#a7a7a7"
        android:inputType="phone"
        android:textColorHint="#f9cece"
        android:layout_marginBottom="85px"
        android:textSize="20sp" />

    <Button
        android:onClick="ShotejSubmit"
        android:layout_marginLeft="90dp"
        android:id="@+id/button_shortage"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:background="#011123"
        android:gravity="center"
        android:text="COMPLETE"
        android:textColor="#63ffb9"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>